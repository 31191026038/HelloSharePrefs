<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/idNumber"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#DFDBDB"
        android:gravity="center"
        android:text="0"
        android:textColor="#757575"
        android:textSize="200dp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/idBlack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:text="black"></Button>

        <Button
            android:id="@+id/idRed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/red"
            android:text="red"></Button>

        <Button
            android:id="@+id/idBlue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/blue"
            android:text="blue"></Button>

        <Button
            android:id="@+id/idGreen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/green"
            android:text="green"></Button>

    </LinearLayout>

    <Button
        android:id="@+id/idCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/gray"
        android:text="Count"
        android:textColor="@color/black"></Button>

    <Button
        android:id="@+id/idReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="reset" />

</LinearLayout>